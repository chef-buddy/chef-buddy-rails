<h1>Welcome to RecipeBuddy!</h1>
<p>Find me in app/views/home/index.html.erb</p>
<div class="card medium">
  <!-- <p><%= @response["recipeName"] %></p> -->
  <div class="card-image waves-effect waves-block waves-light">
    <%= link_to image_tag(@response["imageUrlsBySize"]["90"]), "http://www.yummly.com/recipe/#{@response["id"]}" %>
  </div>
  <div class="card-content">
    <%= link_to "#{@response["recipeName"]}", "http://www.yummly.com/recipe/#{@response["id"]}" %>
  </div>

  <%= button_to "Refresh", home_index_path, :method => :get %>
</div>


