<h2>Log in</h2>

<div class="row">
  <%= form_for(resource, as: resource_name, :class => "col s12", url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="input-field col s12 m4 offset-m4 l4 offset-l4">
        <%= f.email_field :email %>
        <%= f.label :email %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12 m4 offset-m4 l4 offset-l4">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
    </div>

    <div class="row">
      <div class="col s12 m4 offset-m4 l4 offset-l4">
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <% end -%>
      </div>
    </div>

    <div class="row">
      <div class="actions col s12 m4 offset-m4 l4 offset-l4">
        <%= f.submit "Log in", :class=> "btn waves-effect waves-light" %>
      </div>
      <% end %>
    </div>
</div>

<div class="row">
  <div class="actions col s12 m4 offset-m4 l4 offset-l4">
    <%= render "devise/shared/links" %>
</div>
</div>
